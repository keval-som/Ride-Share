<script src="../public/js/ridePublish.js"></script>
<section class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-8">
    <h2 class="text-2xl font-bold text-blue-600 mb-6">Publish a Ride</h2>

    <form id="verifyLicenseForm" action="/verify" method="POST" enctype="multipart/form-data" class="space-y-4">
        <div>
            <label for="license" class="block text-gray-700 font-medium mb-2">License Number: </label>
            <input id="license" name="license" type="text" 
                class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                required>
        </div>
        <div>
            <label for="licenseImg" class="block text-gray-700 font-medium mb-2">Upload License Image: </label>
            <input id="licenseImg" name="licenseImg" type="file"
                class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                accept="image/*" required>
        </div>
        <div>
            <button type="submit"
                class="bg-blue-600 text-white font-bold py-2 px-4 rounded hover:bg-blue-700">Submit</button>
        </div>
    </form>
    
</section>